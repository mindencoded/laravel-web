version: '3'
rpc:
  listen: tcp://127.0.0.1:6001
server:
  command: "php -d variables_order=EGPCS artisan octane:start --server=roadrunner"
  relay: pipes
  env:
    - XDEBUG_SESSION: '1'
http:
  address: 0.0.0.0:8000
  fcgi:
    address: tcp://0.0.0.0:9001
  middleware:
    - gzip
    - static
  static:
    dir: public
    forbid:
      - .php
      - .htaccess
  pool:
    debug: true
    num_workers: 100
    allocate_timeout: '40s'
    max_jobs: 250
    supervisor:
      max_worker_memory: 100
      exec_ttl: '90s'
jobs:
  pool:
    num_workers: 2
    max_worker_memory: 100
kv:
  local:
    driver: memory
    config:
      interval: 60
metrics:
  address: 127.0.0.1:2112
status:
  address: 127.0.0.1:2114
logs:
  mode: development
  level: debug
