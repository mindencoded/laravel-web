version: '3'
http:
  address: 127.0.0.1:8000
  pool:
    num_workers: 4           # Ajustado según el número de CPU
    max_jobs: 500            # Número máximo de trabajos antes de reiniciar el worker
    supervisor:
      exec_ttl: 30s          # Tiempo de vida del worker
  static:
    dir: public              # Ruta estática para archivos públicos
  middleware:
    - 'static'               # Middleware estático
    # Agrega aquí otros middleware si es necesario

server:
  command: 'php ./vendor/bin/roadrunner-worker'  # Comando para iniciar el worker

rpc:
  listen: tcp://127.0.0.1:6001  # Puerto para RPC, usado por Roadrunner y Laravel Octane

logs:
  mode: production             # Modo de log para producción
  level: debug                 # Nivel de detalle del log
  output: /var/log/roadrunner.log  # Archivos de log, no en stdout
  encoding: json

